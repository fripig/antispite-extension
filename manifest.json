{
  "name" : "BrowsingData API: Basics",
  "version" : "1.1",
  "description" : "A trivial usage example.",
  "permissions": [ "*://*/*", "tabs", "notifications", "cookies", "contextMenus" ],
  "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
  },
  "content_scripts": [ {
      "css": [ ],
